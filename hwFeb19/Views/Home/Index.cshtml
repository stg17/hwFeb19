@model CarViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a href="/home/addcar" class="btn btn-dark w-100">Add Car</a>
        </div>
    </div>
    <table class="mt-3 table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Year
                    @if(Model.UpDown)
                    {
                        <a class="btn btn-dark" href="/home/index?sort=desc">
                            <i class="bg-info bi-arrow-up-circle-fill"></i>
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-dark" href="/home/index?sort=asc">
                            <i class="bg-info bi-arrow-down-circle-fill"></i>
                        </a>
                    }
                </th>
                <th>Price</th>
                <th>Car Type</th>
                <th>Leather Seats</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var car in Model.Cars)
            {
                <tr>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Price.ToString("C")</td>
                    <td>@car.CarType</td>
                    <td>
                        <i class="@(car.HasLeatherSeats ? "bi bi-check" : "bi bi-x")"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
